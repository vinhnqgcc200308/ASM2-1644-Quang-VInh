<h3 class = "title" style = "text-align: center;">{{viewTitle}}</h3>
<form action="/toy" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{toy._id}}">
    <div class="form-group title">
        <label>Toy Name</label>
        <input type="text" class="form-control" name="name" value="{{toy.name}}" placeholder="Toy Name">
        <div class="text-danger">
            {{toy.nameError}}
        </div>
    </div>
    <div class="form-group title">
        <label>Price</label>
        <input type="text" class="form-control" name="price" value="{{toy.price}}" placeholder="Price">
        <div class="text-danger">
            {{toy.priceError}}
        </div>
    </div>
    <div class="form-group title">
        <label>Amount</label>
        <input type="text" class="form-control" name="amount" value="{{toy.amount}}" placeholder="Amount">
        <div class="text-danger">
            {{toy.amountError}}
        </div>
    </div>
    <div class="form-group title">
        <label>Provider</label>
        <input type="text" class="form-control" name="provider" value="{{toy.provider}}" placeholder="Provider">
        <div class="text-danger">
            {{toy.providerError}}
        </div>
    </div>
    <div class="form-group title">
        <label>Country</label>
        <input type="text" class="form-control" name="country" value="{{toy.country}}" placeholder="Country">
        <div class="text-danger">
            {{toy.countryError}}
        </div>
    </div>
    <div class="form-group title">
        <label>Email</label>
        <input type="email" class="form-control" name="email" value="{{toy.email}}" placeholder="Email">
        <div class="text-danger">
            {{toy.emailError}}
        </div>
    </div>
    <div class="form-group title">
        <label>Phone</label>
        <input type="text" class="form-control" name="phone" value="{{toy.phone}}" placeholder="Phone">
        <div class="text-danger">
            {{toy.phoneError}}
        </div>
    </div>
    <div class="form-group title">
        <label>City</label>
        <input type="text" class="form-control" name="city" value="{{toy.city}}" placeholder="City">
        <div class="text-danger">
            {{toy.cityError}}
        </div>
    </div>

    <div class="form-group title">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/toy/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>